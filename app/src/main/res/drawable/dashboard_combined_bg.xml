<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1000dp"
                android:centerX="50%"
                android:centerY="40%"
                android:startColor="#0D1B2A"
                android:centerColor="#050A14"
                android:endColor="#000000" />
        </shape>
    </item>

    <!-- Technical Texture Overlay -->
    <item android:drawable="@drawable/dashboard_technical_overlay" />
</layer-list>